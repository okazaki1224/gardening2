<% if @inquiry.errors.any? %>
  <h3><%= @inquiry.errors.count %>件のエラーが発生しました。</h3>
  <ul>
    <% @inquiry.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1><i class="fas fa-fan"></i>お問い合わせ</h1>
<div class = "container-fluid">
  <div class = "row">
    <div class = "col-md-3">
      <%= render 'public/users/list',keyword: @keyword, tag_lists: @tags %></br>
    </div>
    <div class = "col-md-5 offset-md-1">
      <table>
        <tr>
          <td>お名前</td>
        </tr>
        <tr>
          <td><%= @inquiry.name %></td>
        </tr>
        <tr>
          <td>メッセージ</td>
        </tr>
        <tr>
          <td style="white-space: pre-wrap;"><%= @inquiry.message %></td>
        </tr>
      </table>
      <%= form_with model: @inquiry, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :message %>
        <div>
          <p>この内容で送信しますか？</p>
          <%= f.submit "送信", class:'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-2 offset-md-1">
    </div>
  </div>
</div>
