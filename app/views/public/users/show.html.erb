<% @posts.each do |post| %>
  <table>
    <tr>
      <td>
        <%= link_to post_path(post.id) do %>
          <%= post.title %>
        <%end%>
      </td>
      <td>♥いいね♥</td>
    </tr>
  </table>
<%end%>