<h1>投稿一覧</h1>
<h3>左３か４使って部分テンプレ表示</h3>
<%= form_with url: search_posts_path, method: :get, local: true do |f| %>
  <%= f.text_field :keyword, value: @keyword %>
  <%= f.submit "検索" %>
<% end %>

タグ：<% @tag_lists.each do |tag| %>
  <%= link_to tag.tag_name, posts_path(tag_id: tag.id)%>
<% end %></br>
ここまでテンプレ</br>
<% @posts.each do |post| %>
  <table>
    <tr>
      <td>
        【<%= post.genre.name %>】
        <%= link_to post_path(post.id) do %>
          <%= post.title %>
        <% end %>
      </td>
      <td>投稿者：<%= post.user.nickname %></td>
    </tr>
    <tr>
      <td><%= post.created_at.strftime('%Y/%m/%d  %H:%M') %>
        <% if post.favorited_by?(current_user) %>
            ♥<%= post.favorites.count %>
        <% else %>
            ♡<%= post.favorites.count %>
        <% end %>
      </td>
      <td>
        (<%= post.post_comments.count %>)
      </td>
      <td><%#= link_to list.tag_name, posts_path(tag_id: list.id)%>
        <% post.tags.each do |tag| %>
          <%=link_to "##{tag.tag_name}",posts_path(tag_id: tag.id) %>
        <%end%>
      </td>
    </tr>
    <%#= @genre.name %>

    <%# if post.post_images.attached? %>
      <%# post.post_images.each do |image| %>
        <%#= image_tag image.variant(resize: '100x100').processed %>
      <%# end %>
    <%# end %>
  </table>

<% end %>
